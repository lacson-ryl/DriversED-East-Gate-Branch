<!DOCTYPE html>
<html lang="en" class="scroll-smooth overflow-x-auto overflow-y-auto">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Dashboard</title>
    <link href="/f-css/output.css" rel="stylesheet">
    <!-- Swiper CSS -->
    <link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css" />
    <style>
        .side-icons {
            width: 30px;
            height: 30px;
        }

        body::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: url('/f-css/solid/user-bg.jpg');
            background-size: cover;
            background-position: center;
            opacity: 0.3;
            z-index: -2;
            filter: blur(2px);
        }

        .swiper-container {
            display: flex;
            justify-content: center;
            align-items: center;
            position: relative;
            width: 100%;
            overflow: hidden;
        }

        .swiper-wrapper {
            display: flex;
            align-items: center;
        }

        .swiper-slide {
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .card {
            width: 200px;
            height: 400px;
            transition: transform 0.3s ease;
        }

        .swiper-button-next,
        .swiper-button-prev {
            color: gold;
        }

        .swiper-pagination-bullet {
            background-color: white;
        }

        .swiper-pagination-bullet-active {
            background-color: gold;
            opacity: 2;
        }
    </style>
    <!-- Swiper JS -->
    <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
    <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>
</head>

<body class="bg-black flex flex-row w-full">
    <div id="sidebar-container" class="z-10">
    </div>
    <div id="main-content" class="ml-ml-64 h- phone-w-calc md:desktop-w-calc md:ml-[160px] space-y-2">
        <div id="top-bar" class="flex flex-row w-full sticky shadow-inner bg-white border-b-2 p-4 mb-5 opacity-95">
            <div id="left-side" class="flex flex-row gap-4 relative">
                <div>
                    <button id="notif-button" class="relative">
                        <img id="notif-logo" src="/f-css/solid/bell.svg" class="w-7 h-7 inline-block" />
                        <div id="notif-new-indicator"
                            class="h-3 w-3 rounded-full bg-blue-900 absolute top-2 right-2 transform translate-x-1/2 -translate-y-1/2 animate-pulse">
                        </div>
                    </button>
                </div>
                <img id="company-logo" src="/f-css/solid/drivers_ed_logo-no-bg.png" class="w-20 h-8" />
            </div>
            <div id="right-side" class="absolute right-4 text-lg">Dashboard</div>
        </div>

        <div class="swiper-container swiper1" space-between="10">
            <div class="swiper-wrapper">
                <!-- Slides will be dynamically inserted here -->
            </div>
            <!-- Add Pagination -->
            <div class="swiper-pagination swiper-pagination1"></div>
            <!-- Add Navigation -->
            <div class="swiper-button-next swiper-button-next1"></div>
            <div class="swiper-button-prev swiper-button-prev1"></div>
        </div>

        <div class="swiper-container swiper2" space-between="10">
            <div class="swiper-wrapper">
                <!-- Slides will be dynamically inserted here -->
            </div>
            <!-- Add Pagination -->
            <div class="swiper-pagination swiper-pagination2"></div>
            <!-- Add Navigation -->
            <div class="swiper-button-next swiper-button-next2"></div>
            <div class="swiper-button-prev swiper-button-prev2"></div>
        </div>
    </div>
    <script>
        document.addEventListener('DOMContentLoaded', async () => {
            try {
                console.log('User dashboard accessed successfully');
                const script = document.createElement('script');
                script.src = '/f-jsfiles/user-sidebar.js';
                document.body.appendChild(script);

                const userDashboardScript = document.createElement('script');
                userDashboardScript.src = '/f-jsfiles/user-dashboard.js';
                document.body.appendChild(userDashboardScript);
            } catch (error) {
                console.error('Authorization error:', error);
                alert("You are not authorized to view this page.");
                window.location.href = '/user-login'; // Redirect to login if not authorized
            }
        });
    </script>
</body>

</html>