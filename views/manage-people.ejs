<!DOCTYPE html>
<html lang="en" class="scroll-smooth overflow-x-auto overflow-y-auto">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Manage People</title>
    <link href="/f-css/output.css" rel="stylesheet">
    <script type="module">
        import Dexie from "https://cdn.jsdelivr.net/npm/dexie@3.2.4/dist/dexie.mjs";
        window.Dexie = Dexie;
    </script>
</head>

<body class="flex flex-row w-full over">
    <div id="sidebar-container">
    </div>
    <div id="main-content" class="block ml-ml-250 w-calc animate-fadeIn space-y-2">
        <div id="top-bar" class="flex h-15 flex-row w-full sticky shadow-inner bg-white border-b-2 p-4">
            <div id="left-side" class="flex flex-row gap-4 relative">
                <div>
                    <button id="notif-button" class="relative">
                        <img id="notif-logo" src="/f-css/solid/bell.svg" class="w-7 h-7 inline-block" />
                        <div id="notif-new-indicator"
                            class="h-3 w-3 rounded-full bg-blue-900 absolute top-2 right-2 transform translate-x-1/2 -translate-y-1/2 animate-pulse">
                        </div>
                    </button>
                </div>
                <img id="company-logo" src="/f-css/solid/drivers_ed_logo-no-bg.png" class="w-20 h-8" />
            </div>
            <div id="right-side" class="absolute right-4 text-lg">
                Manage People
            </div>
        </div>

        <div id="content" class="flex flex-col w-full">
            <div class="flex justify-between items-center mr-4 my-2">
                <h2 class="text-lg ml-4"> Manage Instructors</h2>

                <button id="back-button"
                    class="bg-blue-700 hidden items-center hover:bg-gradient-to-t from-blue-400 to-blue-800 text-white rounded-lg px-2 py-1">
                    Back
                </button>
                <button id="add-instructor-button"
                    class="bg-blue-700 flex items-center hover:bg-gradient-to-t from-blue-400 to-blue-800 text-white rounded-lg px-2 py-1">
                    <IMG src="/f-css/solid/white/plus.svg" class="w-7 h-7" />
                    <span class="inline-block">Add Instructor</span>
                </button>
            </div>
            <div id="instructors-payroll-history-table" class="max-h-96 mt-3 mb-5 mx-3 overflow-auto shadow-md">

            </div>
            <div id="year-filter" class="hidden justify-between items-center mr-4">
                <h2 class="text-lg ml-2">Payroll History</h2>
                <div id="year-month-payroll-filter-form" class="gap-4">
                    <form id="year-month-payroll-filter-form">
                        <select id="month" name="month" class="border-b-2 border-l-2 p-1 border-gray-500 shadow-md">
                            <option value="" selected>Select month</option>
                            <option value="January">January</option>
                            <option value="February">February</option>
                            <option value="March">March</option>
                            <option value="April">April</option>
                            <option value="May">May</option>
                            <option value="June">June</option>
                            <option value="July">July</option>
                            <option value="August">August</option>
                            <option value="September">September</option>
                            <option value="October">October</option>
                            <option value="November">November</option>
                            <option value="December">December</option>
                        </select>
                        <input type="number" id="year" name="year" placeholder="Input year"
                            class="border-2 border-gray-300 bg-white h-8 pl-4 rounded-lg text-sm focus:outline-none">
                        <button type="submit"
                            class=" bg-blue-700 hover:bg-gradient-to-t from-blue-400 to-blue-800 text-white rounded-lg px-2 py-1">
                            Filter
                        </button>
                    </form>
                </div>
            </div>
            <div id="instructors-current-payroll-table" style="display: none;"
                class="flex flex-col max-h-data-table mt-3 mb-5 mx-3 overflow-auto">

            </div>


        </div>
    </div>

    <div id="myModal" class="fixed inset-0 z-50 items-center justify-center hidden bg-gray-900 bg-opacity-50">
        <div class="relative bg-white rounded-lg shadow-lg min-w-96 max-w-screen-md p-6">
            <span
                class="close absolute top-0 right-2 text-3xl font-semibold text-gray-700 hover:text-gray-900 cursor-pointer ">&times;</span>
            <h2 class="text-xl font-semibold">Instructor Details</h2>
            <p id="modal-details" class="mt-4">the details</p>
        </div>
    </div>
    <script type="module" src="../utils/f-webCryptoKeys.js"></script>
    <script type="module" src="../utils/f-keyManager.js"></script>
    <script type="module" src="../utils/modal-feedback.js"></script>
    <script>

        document.addEventListener('DOMContentLoaded', async () => {
            console.log('Page loaded, checking admin dashboard access');

            try {
                const sidebarScript = document.createElement('script');
                sidebarScript.src = '/f-jsfiles/sidebar.js';
                document.body.appendChild(sidebarScript);

                const managePeopleScript = document.createElement('script');
                managePeopleScript.src = '/f-jsfiles/manage-people.js';
                managePeopleScript.type = "module";
                document.body.appendChild(managePeopleScript);

            } catch (error) {
                console.error('Authorization error:', error);
                alert("You are not authorized to view this page.");
                window.location.href = '/adminlogin'; // Redirect to login if not authorized
            }
        });

    </script>
</body>


</html>