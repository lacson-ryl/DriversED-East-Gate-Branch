<!DOCTYPE html>
<html lang="en" class="scroll-smooth overflow-x-auto overflow-y-auto">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Program Enroll</title>
    <link href="/f-css/output.css" rel="stylesheet">
    <style>
        .calendar {
            display: grid;
            grid-template-columns: repeat(7, 1fr);
            gap: 0.5rem;
            text-align: center;
        }

        .day {
            padding: 1rem;
            border: 1px solid #ccc;
            align-items: center;
        }

        .circle {
            width: 23px;
            height: 20px;
            padding: 0.5px;
            border-radius: 50%;
            text-align: center;
        }

        .available-am {
            background-color: #38a169;
            color: white;
        }

        .available-pm {
            background-color: #38a169;
            color: white;
        }

        .unavailable {
            color: transparent;
        }

        .onsite-tdc {
            background-color: #d69e2e;
            color: white;
        }
    </style>
</head>

<body class="flex flex-row w-full">
    <div id="sidebar-container">
    </div>
    <div id="main-content" class="ml-ml-64 h- phone-w-calc md:desktop-w-calc md:ml-[160px] space-y-2 animate-fadeIn">
        <div id="top-bar" class="flex flex-row w-full sticky shadow-inner bg-white border-b-2 p-4 mb-5 opacity-95">
            <div id="left-side" class="flex flex-row gap-4 relative">
                <div>
                    <button id="notif-button" class="relative">
                        <img id="notif-logo" src="/f-css/solid/bell.svg" class="w-7 h-7 inline-block" />
                        <div id="notif-new-indicator"
                            class="h-3 w-3 rounded-full bg-blue-900 absolute top-2 right-2 transform translate-x-1/2 -translate-y-1/2 animate-pulse">
                        </div>
                    </button>
                </div>
                <img id="company-logo" src="/f-css/solid/drivers_ed_logo-no-bg.png" class="w-20 h-8" />
            </div>
            <div id="right-side" class="absolute right-4 text-lg">
                Programs
            </div>
        </div>

        <div id="content" class="flex flex-col w-full gap-4 pr-3">

            <div class="grid grid-rows-1 md:grid-cols-3 gap-4 ">
                <!-- Application Form -->
                <div class="col-span-1 space-y-3 ">
                    <h1 id="announcement" class="ml-4">Announcement</h1>
                    <form id="applicationForm" class="bg-gray-200 ml-4 p-2 shadow-md">
                        <div class="mb-4">
                            <label for="instructor" class="block text-base font-medium text-gray-700">Instructor</label>
                            <select id="instructor" name="instructor" class="instructor" required>
                                <option value="">Select an Instructor</option>

                            </select>
                        </div>
                        <div class="mb-4">
                            <label for="program" class="block text-base font-medium text-gray-700">Program</label>
                            <select id="program" name="program" required>
                                <option value="">Select a program</option>
                            </select>
                        </div>
                        <div class="mb-4">
                            <label for="startDate" class="block text-sm font-medium text-gray-700">Starting Date (first
                                half)</label>
                            <input type="date" id="startDate" name="startDate" required
                                class="date-input mt-1 block w-full outline outline-1 outline-gray-500 hover:outline-yellow-500 focus:outline-yellow-500 px-1">
                            <select id="startDateAMPM" name="startDateAMPM" required class="mt-1 block w-full">
                                <option value="AM">AM</option>
                                <option value="PM">PM</option>
                            </select>
                        </div>
                        <div class="mb-4">
                            <label for="continuation" class="block text-sm font-medium text-gray-700">Continuation
                                (second half)</label>
                            <input type="date" id="continuation" name="continuation" required
                                class="date-input mt-1 block w-full outline outline-1 outline-gray-500 hover:outline-yellow-500 focus:outline-yellow-500 px-1">
                            <select id="continuationAMPM" name="continuationAMPM" required class="mt-1 block w-full">
                                <option value="AM">AM</option>
                                <option value="PM">PM</option>
                            </select>
                        </div>
                        <div class="mb-4">
                            <label for="transmission"
                                class="block text-sm font-medium text-gray-700">Transmission</label>
                            <select id="transmission" name="transmission" required class="mt-1 block w-full">
                                <option value="manual">Manual</option>
                                <option value="automatic">Automatic</option>
                            </select>
                        </div>

                        <div class="flex flex-row justify-between">
                            <button id="apply-button" type="submit" class="bg-blue-500 text-white px-4 py-2 mt-4">Submit</button>
                            <a id="add-continuation" class="bg-blue-500 text-white px-4 py-2 mt-4 hover:cursor-pointer">
                                Add continuation
                            </a>
                        </div>
                    </form>
                </div>
                <!-- Calendar -->
                <div class="col-span-2 bg-white shadow-md">
                    <div id="color-stamps-instructions" class="place-content-center flex flex-row gap-4 ml-4">
                        <div class="flex flex-row gap-3">
                            <div class="circle available-am place-self-center">AM</div>
                            <div class="circle available-pm place-self-center">PM</div>
                            <p>- PDC slots taken</p>
                        </div>
                        <div class="flex flex-row gap-3">
                            <div class="circle onsite-tdc place-self-center">25</div>
                            <p>- TDC slots availability</p>
                        </div>
                        <div class="flex flex-row gap-3">
                            <div class="bg-green-100 w-6 h-6 place-self-center"></div>
                            <p>- no slots taken</p>
                        </div>
                    </div>

                    <div class="flex justify-between items-center mb-4 px-3">
                        <button id="prevMonth"
                            class="w-24 text-center bg-blue-500 text-white px-4 py-2 rounded-ss-3xl">Previous</button>
                        <div id="monthLabel" class="text-xl font-bold"></div>
                        <button id="nextMonth"
                            class="w-20 text center bg-blue-500 text-white px-4 py-2 rounded-tr-3xl">Next</button>
                    </div>
                    <div class="grid grid-cols-7 mt-4 text-center">
                        <div class="pl-1 text-sm">Mon</div>
                        <div class="pl-1 text-sm">Tue</div>
                        <div class="pl-1 text-sm">Wed</div>
                        <div class="pl-1 text-sm">Thu</div>
                        <div class="pl-1 text-sm">Fri</div>
                        <div class="pl-1 text-sm">Sat</div>
                        <div class="pl-1 text-sm">Sun</div>
                    </div>
                    <div id="calendar"
                        class="grid flex-grow w-full h-auto grid-cols-7 grid-rows-5 gap-px pt-px mt-1 bg-gray-100">
                    </div>
                </div>
            </div>
            <div class="gap-4">
                <p id="table-announcement" class="ml-4 my-4 text-lg"></p>
                <div id="user-applications-table" class="mt-3 mb-5 mx-3"></div>
            </div>
        </div>

    </div>
    </div>

    <div id="formModal" class="fixed inset-0 z-50 place-content-center hidden bg-gray-900 bg-opacity-50">
        <div class="relative justify-self-center bg-white rounded-lg shadow-lg min-w-96 max-w-screen-lg p-6 ">
            <span
                class="close absolute top-0 right-2 text-3xl font-semibold text-gray-700 hover:text-gray-900 cursor-pointer">&times;</span>
            <h2 class="text-xl font-semibold">Add Continuation hours</h2>
            <form id="add-continuation-form" class="mt-4">
                <div class="mb-4">
                    <label for="instructor" class="block text-base font-medium text-gray-700">Instructor</label>
                    <select id="instructor-modal" name="instructor" required>
                        <option value="">Select an Instructor</option>

                    </select>
                </div>
                <div class="mb-4">
                    <label for="course" class="block text-base font-medium text-gray-700">Course <span
                            class="text-xs">(remaing hours)</span></label>
                    <select id="course" name="courseOption" required>
                        <option value="">Select a Enrolled Course</option>

                    </select>
                </div>
                <div class="mb-4">
                    <label for="continuationDate" class="block text-sm font-medium text-gray-700">Continuation
                        Date</label>
                    <input type="date" id="continuationDate" name="continuationDate" required
                        class="date-input mt-1 block w-full outline outline-1 outline-gray-500 hover:outline-yellow-500 focus:outline-yellow-500 px-1">
                </div>
                <div class="flex flex-row gap-4 mb-4">
                    <label for="dateAMPM" class="block text-base font-medium text-gray-700">Slot</label>
                    <select id="dateAMPM" name="dateAMPM" required>
                        <option value="AM">AM</option>
                        <option value="PM">PM</option>
                    </select>
                </div>
                <button type="submit" class="bg-blue-500 text-white px-4 py-2 mt-4">Submit</button>

            </form>
        </div>
    </div>
    <div id="myModal" class="fixed inset-0 z-50 items-center justify-center hidden bg-gray-900 bg-opacity-50">
        <div class="relative bg-white rounded-lg shadow-lg min-w-screen-lg max-w-screen-lg p-6 ">
            <span
                class="close absolute top-0 right-2 text-3xl font-semibold text-gray-700 hover:text-gray-900 cursor-pointer ">&times;</span>
            <h2 class="text-xl font-semibold">Applicant Details</h2>
            <p id="modal-details" class="mt-4">the details</p>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', async () => {
            try {
                // Since the response is not JSON, just log the success
                console.log('User programs accessed successfully');
                const script = document.createElement('script');
                script.src = '/f-jsfiles/user-sidebar.js';
                document.body.appendChild(script);

                const userProgramScript = document.createElement('script');
                userProgramScript.src = '/f-jsfiles/user-programs.js';
                userProgramScript.type = 'module';
                document.body.appendChild(userProgramScript);
            } catch (error) {
                console.error('Authorization error:', error);
                alert("You are not authorized to view this page.");
                window.location.href = '/user-login'; // Redirect to login if not authorized
            }
        });
    </script>
    <div id="notificationDropdown"
        class="hidden absolute w-72 max-h-80 overflow-auto bg-white shadow-lg rounded border border-black"
        style="z-index: 99999;">
        <div class="p-2">
            <h3 class="font-semibold">Recent Notifications</h3>
            <ul id="notificationList" class="text-sm"></ul>
        </div>
    </div>
</body>

</html>