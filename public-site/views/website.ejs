<!doctype html>
<html lang="en" class="scroll-smooth overflow-x-auto overflow-y-auto">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>DriveRight Driving School</title>
  <link rel="preload" href="/public/f-css/output.css" as="style">
  <link rel="stylesheet" href="/public/f-css/output.css">

  <!-- Swiper CSS -->
  <link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css" />
  <style>
    button#previous-promote img {
      filter: drop-shadow(0 0 0.15rem #facc15);
      /* yellow-500 */
    }

    .swiper-container {
      display: flex;
      justify-content: center;
      align-items: center;
      position: relative;
      width: 50%;
      overflow: hidden;
    }

    .swiper-wrapper {
      display: flex;
      align-items: center;
    }

    .swiper-slide {
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .card {
      width: 200px;
      height: 400px;
      transition: transform 0.3s ease;
    }

    .swiper-pagination-bullet {
      background-color: white;
    }

    .swiper-pagination-bullet-active {
      background-color: gold;
      opacity: 2;
    }

    .swiper-button-next,
    .swiper-button-prev {
      color: gold;
      width: 35px;
      /* optional: reduce button size */
      height: 35px;
    }

    #image-background {
      will-change: opacity;
    }

    #promote-container {
      will-change: transform, opacity;
    }

    #tag-line {
      min-height: 2.5rem;
    }

    #tag-paragraph {
      min-height: 5rem;
    }


    /* Shrink buttons on screens smaller than 768px */
    @media (max-width: 767px) {

      .swiper-container {
        width: 100%;
      }
    }
  </style>
  <script src="https://unpkg.com/swiper/swiper-bundle.min.js" defer></script>
  <script src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js" defer></script>
</head>

<body class="bg-slate-50 text-slate-900 w-full antialiased">

  <!-- TopBar -->
  <header id="navbar"
    class="fixed top-0 left-0 w-full bg-neutral-900 bg-opacity-0 transition-all duration-300 z-50 h-32 md:px-24">
    <div class="w-full px-4 py-4 flex items-center text-white content-center h-full justify-between">
      <!-- Logo and title -->
      <div class="flex items-center min-w-52 gap-4 h-full">
        <img src="/public/f-assets/solid/drivers_ed_logo-no-bg.png" alt="DriveRight logo"
          class="h-10 w-auto min-w-24" />
        <div>
          <h1 class="text-base md:text-lg font-semibold">Driver's Ed Driving School</h1>
          <div class="text-xs md:text-sm text-slate-200">Safe. Confident. Licensed.</div>
        </div>
      </div>

      <!-- Hamburger button (visible on small screens) -->
      <button id="nav-toggle" class="md:hidden p-2 z-20">
        <svg class="w-7 h-7 lg:hidden" fill="white" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>

      <!-- Navigation links -->
      <nav id="nav-menu"
        class="flex flex-col min-w-96 md:flex md:flex-row items-center md:items-center gap-4 text-sm absolute md:static top-24 left-0 w-full md:w-auto bg-neutral-900 md:bg-transparent px-4 py-4 md:p-0 z-40">
        <a href="/public/" class="hover:underline">Home</a>
        <a href="/public/courses" class="hover:underline">Courses</a>
        <a href="/public/instructors" class="hover:underline">Instructors</a>
        <a href="/public/locations" class="hover:underline">Locations</a>
        <a href="/account/user-login" class="px-3 py-2 bg-amber-300 hover:bg-amber-500 rounded-md text-white">My Account</a>
      </nav>

    </div>
  </header>

  <section id="automate-slider-section" class="min-h-[calc(100vh+1px)] bg-black w-full grid lg:grid-cols-1 gap-10 items-center">
    <div id="promotional-output"
      class="relative flex flex-col bg-black w-full h-full items-center content-center overflow-hidden animate-fadeIn-public">
      <!-- Background image layer -->
      <img id="image-background" src="" alt="" class="absolute inset-0 w-full h-full object-cover -z-10" />
      <div class="absolute inset-0 w-full h-full object-cover z-0 bg-black opacity-50"></div>
      <!-- Foreground content -->
      <div id="promote-container" class="absolute w-full h-full">
        <div class="mt-28 w-full text-center text-white content-center z-10 py-10 px-24 ">
          <h2 id="tag-line" class="text-3xl font-extrabold leading-tight min-h-9 mb-4">
          </h2>
          <p id="tag-paragraph" class="text-slate-100 mb-6 max-w-[500px] min-h-12 mx-auto">
            loading...
          </p>
          <div class="flex justify-center gap-3 place-self-center">
            <a id="learn-more-href" href="/public/courses"
              class="inline-block text-sm md:text-base px-5 py-3 bg-amber-400 text-white rounded-md shadow">
              Learn More
            </a>
            <a href="/public/contact"
              class="inline-block text-sm md:text-base px-5 py-3 border border-slate-100 rounded-md text-slate-100">
              Contact Us
            </a>
          </div>
        </div>
        <div id="action-buttons"
          class="z-10 content-center text-center absolute bottom-10 left-1/2 transform -translate-x-1/2 flex items-center gap-4">
          <button id="previous-promote" class="-rotate-90 ">
            <div
              class="w-0 h-0 border-l-[12px] border-r-[12px] border-b-[20px] border-transparent border-b-red-700 hover:border-b-rose-500">
            </div>
          </button>
          <div id="circles-indicators" class="flex gap-2">
            <!-- indicators go here -->
          </div>
          <button id="next-promote" class="rotate-90">
            <div
              class="w-0 h-0 border-l-[12px] border-r-[12px] border-b-[20px] border-transparent border-b-green-700 hover:border-b-green-400">
            </div>
          </button>
        </div>
      </div>
    </div>
  </section>

  <hr class="my-10 border-slate-200 " />

  <!-- Services Carousel -->
  <section id="services-section" class="relative block w-full bg-scroll md:bg-fixed bg-center bg-cover min-h-[500px]"
    style="background-image: url('/public/f-assets/public/cars-with-nature.jpg');">

    <div class="relative w-full pt-8 pb-6 md:pt-12 md:pb-10">
      <!-- Background image layer -->
      <div class="absolute inset-0 bg-black opacity-40 z-0"></div>

      <!-- Foreground content -->
      <div class="relative w-full flex flex-col md:flex-row z-10">
        <div class="relative w-full md:w-1/2 text-center items-center content-center min-h-[416px] rounded-md">
          <div
            class="absolute top-1/2 left-1/2 transform -translate-x-1/2  text-center items-center content-center -translate-y-1/2 bg-opacity-50 skew-x-12 -skew-y-12 h-60 w-60 rounded-lg bg-black">

            <div class="text-4xl font-semibold -skew-x-12 skew-y-12 font-RobotoSerif opacity-100 text-green-600">Our
              Services</div>
          </div>

        </div>

        <div class="swiper-container swiper1" space-between="10">
          <div class="swiper-wrapper">
            <!-- Slides will be dynamically inserted here -->
          </div>
          <!-- Add Pagination -->
          <div class="swiper-pagination swiper-pagination1"></div>
          <!-- Add Navigation -->
          <div class="swiper-button-next swiper-button-next1"></div>
          <div class="swiper-button-prev swiper-button-prev1"></div>
        </div>
      </div>
    </div>
  </section>

  <hr class="my-10 border-slate-200" />

  <!-- Instructors Carousel -->

  <section id="instructor-section" class="relative block w-full bg-scroll bg-center bg-cover min-h-[500px]"
    style="background-image: url('/public/f-assets/public/cars-garage.jpg');">
    <div class="relative w-full pt-8 pb-6 md:pt-12 md:pb-10">
      <!-- Background image layer -->
      <div class="absolute inset-0 bg-black opacity-40 z-0"></div>
      <!-- Foreground content -->
      <div class="relative w-full flex flex-col md:flex-row-reverse z-10">
        <div class="relative w-full md:w-1/2 text-center items-center content-center min-h-[416px] rounded-md">
          <div
            class="absolute top-1/2 left-1/2 transform -translate-x-1/2  text-center items-center content-center -translate-y-1/2 bg-opacity-50 skew-x-12 -skew-y-12 h-60 w-60 rounded-lg bg-black">

            <div class="text-4xl font-semibold -skew-x-12 skew-y-12 font-RobotoSerif opacity-100 text-yellow-600">Our
              Instructors</div>
          </div>

        </div>
        <div class="swiper-container swiper2" space-between="10">
          <div class="swiper-wrapper">
            <!-- Slides will be dynamically inserted here -->
          </div>
          <!-- Add Pagination -->
          <div class="swiper-pagination swiper-pagination2"></div>
          <!-- Add Navigation -->
          <div class="swiper-button-next swiper-button-next2"></div>
          <div class="swiper-button-prev swiper-button-prev2"></div>
        </div>
      </div>
    </div>
  </section>


  <hr class="my-12 border-slate-200" />

  <!-- Locations -->
  <section class="px-7 md:px-24 mb-10">
    <h3 class="text-xl font-semibold mb-4">You can find us in these locations</h3>
    <div class="mb-7 place-self-center">
      <p>Main Branch</p>
      <img src="/public/f-assets/public/balibalgo-angeles-branch-location.jpg" class="object-cover aspect-auto max-h-[400px]"
        alt="Main branch">
    </div>

    <h3 class="text-xl font-semibold mb-4">Other Locations</h3>
    <div id="locations-grid" class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6 min-h-96">
      <div>
        <p>Dolores Branch</p>
        <img src="/public/f-assets/public/dolores-branch-location.jpg" class="object-cover aspect-auto min-w-96" alt="">
      </div>
      <div>
        <p>East Gate Branch</p>
        <img src="/public/f-assets/public/east-gate-branch-location.jpg" class="object-cover aspect-auto min-w-96"
          alt="">
      </div>
      <div>
        <p>Mabalacat Branch</p>
        <img src="/public/f-assets/public/mabalacat-branch-location.jpg" class="object-cover aspect-auto min-w-96"
          alt="">
      </div>

    </div>
  </section>

  <!-- Footer -->
  <footer class="bg-slate-900 text-slate-200">
    <div class="max-w-6xl mx-auto px-4 py-8 grid sm:grid-cols-3 gap-6">
      <div>
        <div class="text-white font-semibold">Driver's Ed Driving School</div>
        <div class="text-sm mt-2">123 Main St, Cityname</div>
        <div class="text-sm">Phone: (012) 345-6789</div>
      </div>

      <div>
        <div class="text-white font-semibold">Quick Links</div>
        <ul class="text-sm mt-2 space-y-1">
          <li><a href="/public/courses" class="hover:underline">Courses</a></li>
          <li><a href="/public/instructors" class="hover:underline">Instructors</a></li>
          <li><a href="/public/locations" class="hover:underline">Locations</a></li>
        </ul>
      </div>

      <div>
        <div class="text-white font-semibold">Business</div>
        <div class="text-sm mt-2">License No: 001234</div>
        <div class="text-sm">Open: Mon–Sat, 8:00–18:00</div>
      </div>
    </div>
    <div class="border-t border-slate-800 py-4 text-center text-sm text-slate-500">© <span id="year"></span>
      Driver's Ed Driving School</div>
  </footer>

  <!-- Client JS (kept inline per request; move to external file if desired) -->
  <script src="/public/f-jsfiles/website.js">
    window.addEventListener("load", () => {
      setTimeout(() => {
        window.scrollTo(0, 0);
      }, 0);
    });
  </script>
</body>

</html>